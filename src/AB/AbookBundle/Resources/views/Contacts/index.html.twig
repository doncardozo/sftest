{% extends "AbookBundle:Layout:layout.html.twig" %}

{% block title %}Welcome!{% endblock %}

{% block body -%}

<section class="col col-lg-12">
    <fieldset>
        <legend>List Contacts</legend>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Address</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('contacts_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.firstName }}</td>
                    <td>{{ entity.lastName }}</td>
                    <td>{{ entity.address }}</td>
                    <td>{% if entity.active == 1 %} Yes {% else %} No {% endif %}</td>
                    <td>
                        <ul class="actions">
                            <li>
                                <a href="{{ path('contacts_show', { 'id': entity.id }) }}">show&nbsp;|</a>
                            </li>
                            <li>
                                <a href="{{ path('contacts_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
    </fieldset>
</section>
<style type="text/css">
    .actions li { display: inline-block }
</style>


    {% endblock %}
