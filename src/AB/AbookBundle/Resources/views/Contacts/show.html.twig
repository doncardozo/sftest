{% extends "AbookBundle:Layout:layout.html.twig" %}

{% block title %}Show Contact{% endblock %}

{% block body -%}

<section class="col col-lg-8">
    <fieldset>
        <legend>Contacts</legend>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ entity.firstName }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ entity.lastName }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ entity.address }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{% if entity.active == 1 %} Yes {% else %} No {% endif %}</td>
                </tr>
            </tbody>
        </table>

    </fieldset>

    <ul class="record_actions">
        <li>
            <a class="btn btn-primary" href="{{ path('contacts_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

</section>

<style type="text/css">
    .record_actions { padding-left: 0px; }
    .record_actions li { display: inline-block ; }
</style>

{% endblock %}
