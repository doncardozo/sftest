{% extends "AbookBundle:Layout:layout.html.twig" %}

{% block title %} Add Contact {% endblock %}

{% block body %}

<section class="col col-lg-8">

    <style type="text/css">
        li { padding:5px }
    </style>
    
    <form id="addcont" name="addcont" method="post" action="" >
        <fieldset>
            <legend>Add Contact</legend>   
            <ul>
                <li>
                    <input class="form-control" type="text" id="fname" name="fname" placeholder="First Name" required="true" />
                </li>
                <li>
                    <input class="form-control" type="text" id="lname" name="lname" placeholder="Last Name" required="true" />
                </li>
                <li>                    
                    <input class="form-control" type="text" id="addr" name="addr" placeholder="Address" required="true" />
                </li>
                <li>
                    <input class="btn btn-primary" type="submit" id="submit" name="submit" value="Add" />
                </li>
            </ul>
        </fieldset>
        <span>{{ message }}</span>
    </form>

</section>

{% endblock body %}
