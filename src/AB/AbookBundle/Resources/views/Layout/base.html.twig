<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Address Book - {% block title %}{% endblock %}</title>        
        {% block stylesheets %}{% endblock %}        
        <link href="{{ asset('bundles/abook/bootstrap/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/abook/css/abook-common.css') }}" rel="stylesheet" type="text/css" />
        <script src="{{ asset('bundles/abook/bootstrap/js/jquery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/abook/js/jquery.min.js') }}" type="text/javascript"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/abook/img/favicon.ico') }}" />
        <style type="text/css">
            .container { padding-top: 70px; }
            .btn { width:100px }
        </style>
    </head>
    <body id="{% block pageid '' %}">

        <div class="container">

            <header>
                <div class="content">
                {% block header %}{% endblock %}
                </div>
            </header>

            <div class="main content">

                <div class="content row">
                {% block body %}{% endblock %}
                </div>            

                <footer>
                {% block footer %}{% endblock %}
                </footer>    
                
            </div>

            {% block javascripts %}{% endblock %}   

        </div>
        
    </body>
</html>
